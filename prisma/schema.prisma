generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String

  results  Result[]   // ✅ Əlavə edildi
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  category  String
  questions Question[]
  results   Result[]   // ✅ Əlavə edildi
}

model Question {
  id        String   @id @default(uuid())
  quizId    String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  question  String
  answer    String
  options   String
}

model Result {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  // burada nullable
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  score     Int
  total     Int
  createdAt DateTime @default(now())
}


